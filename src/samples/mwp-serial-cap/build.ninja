rule go
    command = go build -o $out -ldflags "-w -s"

build mwp-serial-cap: go mwp-serial-cap.go btaddr_linux.go btaddr_other.go ti_posix.go ti_other.go go.sum
default mwp-serial-cap

rule copy
    command = install $in $$HOME/.local/bin/

rule gosum
     command = go mod tidy

build go.sum: gosum

build install: copy mwp-serial-cap

rule clean
     command = rm -f mwp-serial-cap

build clean: clean
