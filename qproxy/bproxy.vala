        msg.set_response ("image/png", Soup.MemoryUse.COPY, black_png);
        msg.set_status(200);
    }

    public static int main (string []args)
    {
        if (args.length > 1)
        {
            var loop = new MainLoop();
            var port = int.parse(args[1]);
            var b = new BProxy();
            try {
                b.listen_all(port, 0);
                 } catch (Error e) {
                stdout.printf ("Error: %s\n", e.message);
            }
            loop.run();
        }
        else
        {
            stderr.puts("bproxy port\n");
        }
        return 0;
    }
